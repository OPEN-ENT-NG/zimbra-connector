{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "declaration": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "noImplicitAny": false,
    "lib": ["es2015", "dom"],
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "jquery",
      "core-js",
      "jest"
    ],
    "baseUrl": ".",
    "paths": {
      "@zimbra/*": [
        "zimbra/src/main/resources/public/ts/*"
      ]
    }
  },
  "exclude": [
    "*/build", "node_modules"
  ]
}